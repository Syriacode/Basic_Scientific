<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">
<EditText
    android:id="@+id/result_view"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@android:color/background_light"/>

    <Button
        android:id="@+id/seven"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/result_view"
        android:layout_marginTop="10dp"
        android:background="@android:color/background_light"
        android:onClick="seven"
        android:text="7"
        android:textSize="15dp" />

    <Button
        android:id="@+id/four"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/seven"
        android:layout_marginTop="20dp"
        android:background="@android:color/background_light"
        android:onClick="four"
        android:text="4"
        android:textSize="15dp" />

    <Button
        android:id="@+id/one"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/four"
        android:layout_marginTop="20dp"
        android:background="@android:color/background_light"
        android:onClick="one"
        android:text="1"
        android:textSize="15dp" />

    <Button
        android:id="@+id/zero"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/one"
        android:layout_marginTop="20dp"
        android:background="@android:color/background_light"
        android:onClick="zero"
        android:text="0"
        android:textSize="15dp" />

    <Button
        android:id="@+id/eight"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/result_view"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="11dp"
        android:background="@android:color/background_light"
        android:onClick="eight"
        android:text="8"
        android:textSize="15dp" />

    <Button
        android:id="@+id/five"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/eight"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/background_light"
        android:onClick="five"
        android:text="5"
        android:textSize="15dp" />

    <Button
        android:id="@+id/two"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/five"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/background_light"
        android:onClick="two"
        android:text="2"
        android:textSize="15dp" />

    <Button
        android:id="@+id/dot"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/two"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/background_light"
        android:onClick="dot"
        android:text="."
        android:textSize="15dp" />

    <Button
        android:id="@+id/nine"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/result_view"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/background_light"
        android:onClick="nine"
        android:text="0"
        android:textSize="15dp" />

    <Button
        android:id="@+id/six"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/nine"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/background_light"
        android:onClick="six"
        android:text="6"
        android:textSize="15dp" />

    <Button
        android:id="@+id/three"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/six"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/background_light"
        android:onClick="three"
        android:text="3"
        android:textSize="15dp" />

    <Button
        android:id="@+id/power"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/three"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/background_light"
        android:onClick="power"
        android:text="x^n"
        android:textAllCaps="false"
        android:textSize="15dp" />

    <Button
        android:id="@+id/delete"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/result_view"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_green_light"
        android:onClick="delete"
        android:text="DEL"
        android:textSize="15dp" />

    <Button
        android:id="@+id/multiply"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/nine"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/holo_green_light"
        android:onClick="multiply"
        android:text="*"
        android:textSize="15dp" />

    <Button
        android:id="@+id/division"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/multiply"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/holo_green_light"
        android:onClick="division"
        android:text="/"
        android:textSize="15dp" />

    <Button
        android:id="@+id/addition"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/division"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/holo_green_light"
        android:onClick="addition"
        android:text="+"
        android:textSize="15dp" />

    <Button
        android:id="@+id/on"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/result_view"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_blue_bright"
        android:onClick="off"
        android:text="AC"
        android:textSize="15dp" />

    <Button
        android:id="@+id/sub"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/on"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/holo_green_light"
        android:onClick="sub"
        android:text="_"
        android:textSize="15dp" />

    <Button
        android:id="@+id/percent"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/sub"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/holo_green_light"
        android:onClick="percentage"
        android:text="%"
        android:textSize="15dp" />

    <Button
        android:id="@+id/equal"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/percent"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/holo_green_light"
        android:onClick="equal"
        android:text="="
        android:textSize="15dp" />

</RelativeLayout>